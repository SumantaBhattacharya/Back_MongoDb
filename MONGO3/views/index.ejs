<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Whatsapp</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f0f0f0;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 8px;
        }

        h3 {
            text-align: center;
            color: #333;
        }

        .chat-card {
            border: 1px solid #ddd;
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 5px;
            background-color: #f9f9f9;
            position: relative;
        }

        .chat-card p {
            margin: 5px 0;
        }

        strong {
            color: #555;
        }

        button {
            padding: 1vw;
            color: black;
            background-color: white;
            font-weight: 600;
            font-style: normal;
            border-radius: 40px;
            border: 2px solid black;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s, transform 0.3s;
            margin-bottom: 1vw;
            margin-right: 2vw;
        }

        button:hover {
            background-color: #f0f0f0;
            color: #333;
            transform: scale(1.05);
        }

        .edit-button {
            padding: 6px 12px;
            font-size: 14px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.3s;
            margin-top: 10px;
        }

        .edit-button:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

        /* Responsive Styles */
        @media (max-width: 600px) {
            .container {
                padding: 10px;
            }

            .chat-card {
                padding: 10px;
            }

            .edit-button {
                font-size: 12px;
                padding: 5px 10px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <h3>All Chats</h3>
        <a href="/chats/new">
            <button type="button">New Chat</button>
        </a>
        <% for(let chat of chats) { %>
            <div class="chat-card">
                <p><strong>From:</strong> <%= chat.from %></p>
                <p><strong>To:</strong> <%= chat.to %></p>
                <p><strong>Message:</strong> <%= chat.msg %></p>
                <form action="/chats/edit/<%= chat._id %>" method="get" style="display:inline;">
                    <button type="submit" class="edit-button">Edit</button>
                </form>
                <form action="/chats/delete/<%= chat._id %>?_method=DELETE" method="post" style="display:inline;">
                    <button type="submit" class="edit-button">Delete</button>
                </form>
                <p><strong>Date:</strong> <%= new Date(chat.createdAt).toLocaleString() %></p>
            </div>
        <% } %>
    </div>
</body>
</html>

